mixin transportation-types( img, title, dataIndex, addClass )
	.col-md-6.col-lg-4
		a(href="#descripBox" data-card=dataIndex class="transportation-types-item "+ addClass)
			button.btn-more Подробнее
			.transportation-types-img
				img(src="img/transport-types/"+ img+".jpg", alt="img")
			.transportation-types-title
				span
					img(src="img/icons/"+ img +".png", alt="icon")
				h4 !{title}


